<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".HomePage1Activity">

    <ScrollView
        android:layout_width="358dp"
        android:layout_height="594dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/readBooks"
                android:layout_width="match_parent"
                android:layout_height="352dp"
                app:srcCompat="@drawable/readbooks1" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="27dp" />

            <ImageView
                android:id="@+id/viewfav"
                android:layout_width="match_parent"
                android:layout_height="352dp"
                app:srcCompat="@drawable/saveimg1" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <ImageView
                android:id="@+id/viewLater"
                android:layout_width="match_parent"
                android:layout_height="352dp"
                app:srcCompat="@drawable/saveimg2" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="22dp" />

            <ImageView
                android:id="@+id/viewRead"
                android:layout_width="match_parent"
                android:layout_height="352dp"
                app:srcCompat="@drawable/viewread1" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="23dp" />

            <ImageView
                android:id="@+id/viewFeed"
                android:layout_width="match_parent"
                android:layout_height="352dp"
                app:srcCompat="@drawable/feedback" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>